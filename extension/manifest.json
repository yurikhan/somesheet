{
  "description": "Apply user-defined stylesheets",
  "manifest_version": 2,
  "name": "Somesheet",
  "version": "1.0.3",
  "icons": {
    "48": "icons/customize-16.svg"
  },

  "applications": {
    "gecko": {
      "id": "somesheet@centaur.ath.cx"
    }
  },

  "background": {
    "scripts": [
      "background.js",
      "cssparser.js"
    ]
  },

  "browser_action": {
    "default_icon": "icons/customize-16.svg",
    "default_popup": "popup/applicable-styles.html",
    "browser_style": true
  },

  "permissions": [
    "nativeMessaging",
    "<all_urls>",
    "tabs",
    "webNavigation"
  ]
}
